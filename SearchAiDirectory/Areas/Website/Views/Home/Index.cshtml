@model HomePageModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid mx-auto px-4 pb-12">

    <!-- Hero Section -->
    <div class="hero bg-gray-100 p-12 rounded-lg shadow-lg text-center w-full">
        <h1 class="text-5xl font-bold mb-4 text-black-800">Welcome to AI Directory</h1>
        <p class="text-xl mb-6 text-black-700">Find the best AI tools to solve your problems</p>
        <div class="flex justify-center">
            <div class="relative w-full md:w-3/4 lg:w-1/2">
                <input type="text" class="w-full p-4 border border-yellow-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500" placeholder="Search for AI tools...">
                <button class="absolute right-0 top-0 mt-4 mr-4 bg-yellow-500 text-white rounded-lg px-4 py-2 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M12.9 14.32a8 8 0 111.414-1.414l4.387 4.387a1 1 0 01-1.414 1.414l-4.387-4.387zM8 14a6 6 0 100-12 6 6 0 000 12z" clip-rule="evenodd" />
                    </svg>
                </button>
            </div>
        </div>
        <p class="mt-4 text-gray-600">Over 1,000 AI Tools Curated for Your Needs</p>
    </div>

    <!-- Problems Section -->
    <div class="problems mt-12">
        <h2 class="text-3xl font-bold mb-6 text-black-800">Ai Categories</h2>
        <div class="flex flex-wrap gap-4">
            @foreach (var category in Model.Categories)
            {
                <div class="p-4 bg-white rounded-lg shadow-md flex items-center space-x-4">
                    <button class="text-yellow-500 font-semibold" onclick="searchProblem('Image Recognition')">@category.Name</button>
                </div>
            }
        </div>
    </div>

    <!-- Tools Section -->
    <div class="tools mt-12">
        <h2 class="text-3xl font-bold mb-6 text-black-800">AI Tools</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var tool in Model.Top3Tools)
            {
                <div class="tool-card bg-white p-6 rounded-lg shadow-lg">
                    <img src="https://placeholder.co/300x300" alt="@tool.Name" class="w-full h-48 object-cover rounded-t-lg">
                    <div class="p-4">
                        <h3 class="text-2xl font-bold mb-2">@tool.Name</h3>
                        <p class="text-gray-700 mb-4">@tool.Description</p>
                        <a href="/tool/details/@tool.Name" class="text-yellow-500 font-semibold">Learn More</a>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

<script type="text/javascript">
    function searchProblem(problem) {
        // Implement the search functionality here
        console.log(`Searching for: ${problem}`);
    }
</script>
