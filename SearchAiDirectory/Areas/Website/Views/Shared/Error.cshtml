@{
    Layout = "_Layout";
    ViewData["Title"] = "Error";
    ViewData["MetaDescription"] = "Oops! The page you're looking for cannot be found. Visit SearchAiDirectory.com to explore our services or return to the homepage for more information.";
    ViewData["MetaKeywords"] = "404 error, page not found, error page, SearchAiDirectory, SearchAiDirectory.com, website error, missing page";
}

<div class="min-h-[70vh] flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl w-full space-y-8 text-center">
        <!-- Error Illustration -->
        <div class="w-full max-w-md mx-auto">
            <img src="/img/404-illustration.svg" 
                 alt="404 Error Illustration" 
                 class="w-full h-auto"
                 onerror="this.src='https://images.unsplash.com/photo-1610337673044-720471f83677?w=600'"/>
        </div>

        <!-- Error Content -->
        <div class="space-y-6">
            <div>
                <h1 class="text-6xl font-extrabold text-yellow-600 mb-2">404</h1>
                <h2 class="text-3xl font-bold text-gray-900">Page Not Found</h2>
                <p class="mt-4 text-lg text-gray-600">
                    Oops! Looks like you've wandered into uncharted territory.
                    The page you're looking for doesn't exist or has been moved.
                </p>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center mt-8">
                <a href="/" 
                   class="inline-flex items-center justify-center px-6 py-3 border border-transparent 
                          text-base font-medium rounded-md text-white bg-yellow-600 
                          hover:bg-yellow-700 transition-colors duration-200">
                    Back to Homepage
                </a>
                <a href="/categories" 
                   class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 
                          text-base font-medium rounded-md text-gray-700 bg-white 
                          hover:bg-gray-50 transition-colors duration-200">
                    Browse Categories
                </a>
            </div>

            <!-- Help Text -->
            <p class="text-sm text-gray-500 mt-8">
                If you believe this is a mistake, please 
                <a href="/contact" class="text-yellow-600 hover:text-yellow-700 underline">contact our support team</a>.
            </p>
        </div>
    </div>
</div>