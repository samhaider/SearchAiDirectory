<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | SearchAiDirectory.com</title>
    <meta name="description" content="@ViewData["MetaDescription"]" />
    <meta name="keywords" content="@ViewData["MetaKeywords"]" />

    <link rel="apple-touch-icon" sizes="180x180" href="~/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon/favicon-16x16.png" />
    <link rel="manifest" href="~/favicon/site.webmanifest" />

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenu.classList.toggle('hidden');
        }

        function toggleUserMenu() {
            const userDropdown = document.getElementById('user-dropdown');
            userDropdown.classList.toggle('hidden');

            // Close dropdown when clicking outside
            document.addEventListener('click', function(event) {
                const dropdown = document.getElementById('user-dropdown');
                const button = event.target.closest('button');
                if (!button && !dropdown.classList.contains('hidden')) {
                    dropdown.classList.add('hidden');
                }
            });
        }
    </script>
    <!-- Google Tag Manager -->
    <script type="text/javascript">
        (function (w, d, s, l, i) {
            w[l] = w[l] || []; w[l].push({
                'gtm.start':
                    new Date().getTime(), event: 'gtm.js'
            }); var f = d.getElementsByTagName(s)[0],
                j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
                    'https://www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
        })(window, document, 'script', 'dataLayer', 'GTM-TF9C3FNV');
    </script>
    <!-- End Google Tag Manager -->
</head>

<body class="flex flex-col min-h-screen bg-gray-50">

    <noscript>
        <meta http-equiv="refresh" content="0; url=/nojs" />
    </noscript>

    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TF9C3FNV" height="0" width="0"
                style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    <!-- Header -->
    <header class="bg-white shadow-sm">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-2">
            <div class="flex justify-between h-16">
                <div class="flex">
                    <!-- Logo -->
                    <div class="flex-shrink-0 flex items-center">
                        <a href="/" class="text-2xl font-bold text-yellow-600 flex items-center space-x-2">
                            <img src="~/img/logo/logo-transparent.png" alt="logo" width="50" height="50" />
                            <span>SearchAiDirectory</span>
                        </a>
                    </div>
                    <!-- Navigation Links -->
                    <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                        <a href="/tools"
                           class="border-transparent text-gray-700 hover:border-yellow-500 hover:text-yellow-600 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            Tools
                        </a>
                        <a href="/categories"
                           class="border-transparent text-gray-700 hover:border-yellow-500 hover:text-yellow-600 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            Categories
                        </a>
                        <a href="/news"
                           class="border-transparent text-gray-700 hover:border-yellow-500 hover:text-yellow-600 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            News
                        </a>
                    </div>
                </div>
                <!-- Mobile menu button -->
                <div class="sm:hidden flex items-center">
                    <button onclick="toggleMobileMenu()" type="button"
                            class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-yellow-600 hover:bg-gray-100">
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>
                <!-- User Navigation -->
                <div class="hidden sm:ml-6 sm:flex sm:items-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="relative ml-3">
                            <div>
                                <button type="button" onclick="toggleUserMenu()" class="flex items-center text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-yellow-500">
                                    <span class="sr-only">Open user menu</span>
                                    <div class="h-8 w-8 rounded-full bg-yellow-600 text-white flex items-center justify-center">
                                        @(User.Identity.Name[0].ToString().ToUpper())
                                    </div>
                                </button>
                            </div>
                            <div id="user-dropdown" class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-50">
                                <a href="/settings" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Settings</a>
                                <a href="/tools/add" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Add a Tool</a>
                                <form method="post" action="/logout">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Logout</button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a href="/login" class="text-gray-700 hover:text-yellow-600 px-3 py-2 rounded-md text-sm font-medium">
                            Sign in
                        </a>
                        <a href="/signup" class="bg-yellow-600 text-white hover:bg-yellow-700 px-3 py-2 rounded-md text-sm font-medium">
                            Sign up
                        </a>
                    }
                </div>
            </div>
            <!-- Mobile menu -->
            <div id="mobile-menu" class="hidden sm:hidden">
                <div class="pt-2 pb-3 space-y-1">
                    <a href="/"
                       class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-yellow-600 hover:bg-gray-50">Home</a>
                    <a href="/news"
                       class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-yellow-600 hover:bg-gray-50">News</a>
                    <a href="/categories"
                       class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-yellow-600 hover:bg-gray-50">Categories</a>
                    <div class="border-t border-gray-200 pt-4">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="px-3 py-2 flex items-center space-x-3">
                                <div class="h-8 w-8 rounded-full bg-yellow-600 text-white flex items-center justify-center">
                                    @(User.Identity.Name[0].ToString().ToUpper())
                                </div>
                                <span class="text-base font-medium text-gray-700">@User.Identity.Name</span>
                            </div>
                            <a href="/settings"
                               class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-yellow-600 hover:bg-gray-50">Settings</a>
                            <a href="/tools/add"
                               class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-yellow-600 hover:bg-gray-50">Add a Tool</a>
                            <form method="post" action="/logout" class="block">
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                        class="w-full text-left px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-yellow-600 hover:bg-gray-50">
                                    Logout
                                </button>
                            </form>
                        }
                        else
                        {
                            <a href="/login"
                               class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-yellow-600">Sign in</a>
                            <a href="/signup"
                               class="block px-3 py-2 rounded-md text-base font-medium bg-yellow-600 text-white hover:bg-yellow-700">Sign up</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow max-w-7xl w-full mx-auto px-4 sm:px-6 lg:px-8 py-8">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                <div>
                    <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Company</h3>
                    <ul class="mt-4 space-y-4">
                        <li>
                            <a href="/about" class="text-base text-gray-700 hover:text-yellow-600">
                                About
                            </a>
                        </li>
                        <li>
                            <a href="/contact" class="text-base text-gray-700 hover:text-yellow-600">
                                Contact
                            </a>
                        </li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Legal</h3>
                    <ul class="mt-4 space-y-4">
                        <li>
                            <a href="/privacy" class="text-base text-gray-700 hover:text-yellow-600">
                                Privacy
                            </a>
                        </li>
                        <li>
                            <a href="/terms" class="text-base text-gray-700 hover:text-yellow-600">
                                Terms
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="mt-8 border-t border-gray-200 pt-8">
                <p class="text-base text-gray-400 text-center">
                    &copy; @DateTime.Now.Year SearchAiDirectory. All rights reserved.
                </p>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>