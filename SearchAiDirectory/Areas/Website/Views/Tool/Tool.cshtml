@model Tool
@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Name;
    ViewData["Meta-Description"] = Model.MetaDescription;
    ViewData["Meta-Keywords"] = Model.MetaKeywords;
}

<div class="bg-white rounded-lg shadow-sm p-6">
    <!-- Tool Header Section -->
    <div class="flex flex-col md:flex-row items-start gap-6">
        <!-- Tool Image -->
        <div class="w-full md:w-1/3">
            <img src="@Model.ImageUrl" alt="@Model.Name" 
                 class="w-full h-64 object-cover rounded-lg shadow-sm"
                 onerror="this.src='/img/placeholder.png'"/>
        </div>

        <!-- Tool Info -->
        <div class="w-full md:w-2/3">
            <div class="flex justify-between items-start">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">@Model.Name</h1>
                    <a href="@Model.Website" target="_blank" rel="noopener noreferrer" 
                       class="text-blue-600 hover:text-blue-800 text-sm mt-2 inline-block">
                        Visit Website →
                    </a>
                </div>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                    @Model.Category.Name
                </span>
            </div>

            <div class="mt-6">
                <h2 class="text-lg font-semibold text-gray-900">Description</h2>
                <p class="mt-2 text-gray-600">@Model.Description</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.PriceModel))
            {
                <div class="mt-6">
                    <h2 class="text-lg font-semibold text-gray-900">Pricing</h2>
                    <p class="mt-2 text-gray-600">@Model.PriceModel</p>
                </div>
            }
        </div>
    </div>
</div>
