@{
    Layout = "_Layout";
    ViewData["Title"] = "Enter Reset Password";
}

<!-- Enter Code view-->
<div class="w-full max-w-md mx-auto my-10">

    <!-- Heading -->
    <h1 class="text-4xl font-bold text-center mb-3">Reset Password</h1>

    <!-- Subheading -->
    <p class="text-gray-500 text-center mb-5">Enter the code you received in your email.</p>

    <div class="mt-6 text-center">
        <label id="invalidMessage" class="block text-sm font-medium text-red-600">@ViewBag.Message</label>
    </div>

    <!-- Form -->
    <form method="post" action="/ConfirmCode" class="space-y-6" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" id="email" name="email" value="@ViewBag.Email" />

        <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700">Reset Code</label>
            <input type="text" id="code" name="code" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-500 focus:border-yellow-500 sm:text-sm" placeholder="12345" required>
        </div>

        <button type="submit" class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 mb-3">Reset Password</button>
    </form>

    <div class="mt-6 text-center">
        <small class="text-gray-500">
            Remember your password? <a href="/Login" class="text-yellow-600 hover:text-yellow-500">Log in</a>.
        </small>
        <br />
        <small class="text-gray-500">
            Don't have an account? <a href="/Signup" class="text-yellow-600 hover:text-yellow-500">SignUp</a>.
        </small>
    </div>
</div>